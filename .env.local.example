# ------------------------------------------------------------------------------
# EMAIL SERVICE (EmailJS)
# ------------------------------------------------------------------------------
VITE_EMAILJS_SERVICE_ID="[INSERT_EMAILJS_SERVICE_ID]"
VITE_EMAILJS_TEMPLATE_ID="[INSERT_EMAILJS_TEMPLATE_ID]"
VITE_EMAILJS_PUBLIC_KEY="[INSERT_EMAILJS_PUBLIC_KEY]"

